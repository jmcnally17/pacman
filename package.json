{
  "name": "pacman",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "db:create": "npx sequelize-cli db:create",
    "migrate": "npx sequelize-cli db:migrate",
    "db:create:test": "npx sequelize-cli db:create --env test",
    "migrate:test": "npx sequelize-cli db:migrate --env test",
    "test:unit": "jest spec --detectOpenHandles",
    "test:unit:coverage": "jest spec --detectOpenHandles --coverage",
    "test:client": "cd client && CI=true npm test",
    "test:client:coverage": "cd client && CI=true npm test -- --coverage",
    "test": "npm run test:unit && npm run test:client",
    "test:coverage": "npm run test:unit:coverage && npm run test:client:coverage",
    "build": "npm install && npm run migrate"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.19",
    "pg": "^8.8.0",
    "sequelize": "^6.21.4"
  },
  "devDependencies": {
    "jest": "^28.1.2",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.4"
  }
}
